@{
    Layout = null;
}
@model MarkdownRepository.Models.Document

<!DOCTYPE html>
<html>
<head>
    <title>@Model.title</title>
    <meta charset="utf-8">
    <link rel="icon" href="~/images/favicon.ico">
    <style>
        body {
            font-family: 'Droid Serif';
        }

        h1, h2, h3 {
            font-family: 'Yanone Kaffeesatz';
            font-weight: normal;
        }

        .remark-code, .remark-inline-code {
            font-family: 'Ubuntu Mono';
        }

        .remark-slide {
            border-top: red solid;
            border-bottom: red solid;
            border-radius: 5px;
        }

        .remark-slide-content::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: .05;            
            background-image: url(@Url.Content("~/Images/slide_background.jpg"));
        }
        .remark-slide-content{
            padding: 0em 2em !important;
        }
    </style>
</head>
<body>
    <textarea id="source">
        @Html.Raw(Model.content)     
    </textarea>
    
    <script src="@Url.Content("~/javascripts/remark-latest.min.js")"></script>
    <script>
      var slideshow = remark.create();
    </script>
</body>
</html>