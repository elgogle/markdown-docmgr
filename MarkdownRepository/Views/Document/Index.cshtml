@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<MarkdownRepository.Models.Document>


<div class="blog-post markdown-body col-md-10">
@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>
                        <div class="doc-list">
                            <div class="pull-right" style="font-size:0.7em;">
                                <a href="@Url.Action("Create", new { id = doc.rowid })"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                                <a href="javascript:deleteDoc('@doc.rowid')"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                            </div>

                            <a href='@Url.Action("Show", new { id = doc.rowid })'>
                                <h3>@doc.title</h3>                                
                            </a>

                            <div class="list-foot">
                                @if (!string.IsNullOrEmpty(doc.category))
                                {
                                    <span class="list-doc-category">Category: </span> @doc.category
                                }
                                <span class="list-doc-updatetime">Update datetime: </span> @doc.update_at
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 分页 -->
}
</div>
<div class="col-md-2 side-category">
    <span class="title">Documents Category</span>
    <div class="doc-category">        
    @if (ViewBag.Category != null) 
    {
        <ul>
            @foreach (var c in ViewBag.Category as List<dynamic>) 
            {
                if (!string.IsNullOrWhiteSpace(c.category as string))
				{
                <li>@Html.ActionLink(string.Format("{0}", c.category as string), "SearchByCategory", new { category = c.category, byOwner=true })<span style="font-size:0.7em"> @c.hint</span> </li>
				}
            }
        </ul>
    }
    </div>
</div>

@section style{
    <style>
        .blog-post{ margin-left: -45px; margin-top: 0!important;}
        .latest-doc li{ list-style-type:none; margin-bottom: 1em; }
        /*.doc-list{ background-color:#f3f9f7; border-radius: 5px; padding: 5px;}*/
        .list-foot 
        {
            font-size: 0.5em;
            color: Gray;
            font-family: sans-serif;
            margin-top: 0.5em;
        }
        .list-doc-category{ color:#337ab7; }
        .list-doc-updatetime{ color: #a342a9; }
        
        .md{ word-wrap: break-word; font-size: 0.8em; color: gray; margin: 1em; }
        .side-category{ height:100%; }
        .side-category .title    
        {
            font-size: 0.8em;
            padding: 0.2em;
            color: firebrick;
            font-family: cursive;
        }
        
        .doc-category{ background-color:#f3f9f7; border-radius: 5px; padding: 5px; }
	    .doc-category ul{padding-left:0.2em}
        .doc-category ul li{list-style-type: none; font-size:0.8em}
    </style>
}

@section scripts{

<script>
    function deleteDoc(id){
        if (confirm("确认删除?")) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete","Document")",
                data: { id: id },

                success: function (data) {
                    if(data.success){
                        location.reload();
                    }else{
                        alert(data.message);
                    }
                }
            });
        }
    }

</script>
}

